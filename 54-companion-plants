public Boolean companionPlants(String plant1, String plant2) {

	Map<string,string> companionMap = new Map<string,string>{
'lettuce' => 'cucumbers',
'lettuce' => 'onions',
'onions' => 'carrots',
'onions' => 'tomatoes',
};

if((companionMap.get (plant1) == plant2)  ||
(companionMap.get(plant2) == plant1)))
{
    return true;
}
else {
    return false;
}



}